<h1>Users</h1>
<table class="table-striped table-bordered">
  <tr>
    <th>Fullname</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.full_name %>
      </td>
      <td>
        <%= link_to 'Trim', trim_user_path(user) %>
        <%= link_to 'Massage and Trim', massage_and_trim_user_path(user) %>
        <%= link_to 'Shave', shave_user_path(user) %>
      </td>
    </tr>
  <% end %>
</table>

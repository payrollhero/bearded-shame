%h1 Users

%table.table-striped.table-bordered
  %tr
    %th Fullname
    %th Actions
  - @users.each do |user|
    %tr
      %td= user.fullname
      %td
        = link_to 'Trim', trim_user_path(user), :id => "#{user.id}", :class => 'trim', :data => {:url => '/trim'}, method: :put
        = link_to 'Massage and Trim', massage_and_trim_user_path(user), :id => "#{user.id}", :class=> 'massage-trim', :data => {:url => '/massage_and_trim'}, method: :put
        = link_to 'Shave', shave_user_path(user), :id => "#{user.id}", :class => "shave", :data => {:url => '/shave'}, method: :put
        = button_to "Reset", reset_user_path(user), :method => :put

= render partial: "new"

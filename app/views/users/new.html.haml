%h1 Sign up
.fieldset
= form_for @user, :validation => true do |f|
  %p
    = label_tag :first_name, "First Name: "
    = f.text_field :first_name
  %p
    = label_tag :last_name, "Last Name: "
    = f.text_field :last_name
  %p
    = label_tag :email, "Email: "
    = f.text_field :email
    
  %p
    = f.submit "Create"
    = link_to 'Cancel', :back  
.container
  %p#notice= notice

  %p
    %b Full name:
    = @user.full_name
  %p
    %b Email:
    = @user.email
  %p
    %b Username:
    = @user.gender.capitalize
  %p
    %b Status:
    = @user.status.try(:gsub, "_", " ").try(:capitalize)

  = link_to 'Edit', edit_user_path(@user)
  \|
  = link_to 'Back', users_path

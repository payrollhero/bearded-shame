<h2>User search</h2>

<%= form_tag(user_search_path(:search), method: 'get', remote: true, id: 'search-form') do %>
  <div class='search'>
    <label for='search-input'><i class='fa fa-search'></i></label>
    <%= text_field_tag :search, params[:search], placeholder: "Search for a user", id: 'search-input' %>
    <%= button_tag("", class: 'fa fa-times-circle clear-search') %>
  </div>
<% end %>

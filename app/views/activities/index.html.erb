<h1> Activities </h1>

<p><%= flash[:success] %></p>

<%= link_to "List Users", root_path %>

<table class="table-striped table-bordered">
  <thead>
    <th>Start Time</th>
    <th>Duration</th>
    <th>Activity Type</th>
  </thead>

  <tbody>
    <% @activities.each do | activity | %>
      <tr>
        <td><%= activity.start_time.strftime("%H:%M:%S") %></td>
        <td><%= activity.duration %></td>
        <td><%= activity.type %></td>
      </tr>
    <% end %>
  </tbody>
</table>

